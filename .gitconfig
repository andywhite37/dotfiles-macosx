[user]
	name = Andy White
	email = greatwhitehope@gmail.com

[color]
    branch = auto
    diff = auto
    interactive = auto
    status = auto

[alias]
    s = status
    a = add
    b = branch
    co = checkout
    ci = commit
    d = diff
    #dt = difftool #difftool not configured for diffmerge
    dt = diff
    m = merge
    mt = mergetool
    sm = submodule
    cc = rev-parse HEAD
    hist = log --pretty=format:'%H %d | %ad | %an - %s' --graph --date=short
    h = log --pretty=format:'%H %d | %ad | %an - %s' --graph --date=short --all
    type = cat-file -t
    dump = cat-file -p

[merge]
    tool = diffmerge

[mergetool "diffmerge"]
    cmd = \"${HOME}/bin/git-diffmerge-merge.sh\" \"$BASE\" \"$LOCAL\" \"$REMOTE\" \"$MERGED\"
    trustExitCode = false

[diff]
    external = \"${HOME}/bin/git-diffmerge-diff.sh\"
[push]
	default = simple
[core]
	excludesfile = /Users/awhite/.gitignore_global
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
