{
  // TypeScript
  //"tsserver.log": "verbose"
  // ESLint
  "eslint.alwaysShowStatus": true,
  "eslint.run": "onSave",
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  // Prettier
  "prettier.onlyUseLocalVersion": true,
  // CoC
  "coc.preferences.formatOnSaveFiletypes": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "json",
    "jsonc",
    "css",
    "markdown"
  ]
}
