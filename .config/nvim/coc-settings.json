{
  // CoC
  "coc.preferences.formatOnSaveFiletypes": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "json",
    "jsonc",
    "css",
    "markdown",
    "purescript"
  ],

  // CoC custom language servers
  "languageserver": {
    "purescript": {
      "command": "purescript-language-server",
      "args": [
        "--stdio"
      ],
      "filetypes": [
        "purescript"
      ],
      "trace.server": "off",
      "rootPatterns": [
        "bower.json",
        "psc-package.json",
        "spago.dhall"
      ],
      "settings": {
        "purescript": {
          "addNpmPath": true,
          "addSpagoSources": true // etc
        }
      }
    }
  },

  // TypeScript
  //"typescript.tsserver.maxTsServerMemory": "16GB",
  "typescript.preferences.importModuleSpecifier": "relative",
  //"tsserver.log": "normal",

  // ESLint
  "eslint.alwaysShowStatus": true,
  "eslint.options": {
    //"cache": true
  },
  "eslint.run": "onSave",
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.workingDirectories": [
    { "mode": "auto" }
  ],

  // Prettier
  "prettier.onlyUseLocalVersion": true
}
